        <KeyBinding Key="NumPad5" Command="{Binding KeyUpCommand}"></KeyBinding>
        <KeyBinding Key="NumPad6" Command="{Binding KeyUpCommand}"></KeyBinding>
        <KeyBinding Key="NumPad7" Command="{Binding KeyUpCommand}"></KeyBinding>
